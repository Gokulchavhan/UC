<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="15dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We Use The Best Brands"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="9">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/gillette_logo"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/loreal_logo"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/old_spice"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="9">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cherlus_logo"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/the_men_company"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:background="@android:color/white"
            android:src="@drawable/o3_logo"/>
    </LinearLayout>




</LinearLayout>