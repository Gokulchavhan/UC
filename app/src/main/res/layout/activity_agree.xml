<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgreeActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_hc"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            android:theme="@style/CustomBackArrow" />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="12dp"
            android:padding="10dp"
            android:text="I Am Safe and Healthy"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="4dp"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="COVID-19 Self Health Declaration: Your honest responce will ensure safety as well as that of our professionals"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:text="Click here to agree" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="60dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_brightness_dot_24"
                android:drawablePadding="20dp"
                android:layout_gravity="top"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="4dp"
                android:textSize="17sp"
                android:text="COVID-19 Self Health Declaration: Your honest responce will ensure safety as well as that of our professionals"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_brightness_dot_24"
                android:drawablePadding="20dp"
                android:layout_gravity="top"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="4dp"
                android:textSize="17sp"
                android:text="COVID-19 Self Health Declaration: Your honest responce will ensure safety as well as that of our professionals"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_brightness_dot_24"
                android:drawablePadding="20dp"
                android:layout_gravity="top"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="4dp"
                android:textSize="17sp"
                android:text="COVID-19 Self Health Declaration: Your honest responce will ensure safety as well as that of our professionals"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_brightness_dot_24"
                android:drawablePadding="20dp"
                android:layout_gravity="top"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="4dp"
                android:textSize="17sp"
                android:text="COVID-19 Self Health Declaration: Your honest responce will ensure safety as well as that of our professionals"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_brightness_dot_24"
                android:drawablePadding="20dp"
                android:layout_gravity="top"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="4dp"
                android:textSize="17sp"
                android:text="COVID-19 Self Health Declaration: Your honest responce will ensure safety as well as that of our professionals"/>


        </LinearLayout>
        <View
            android:id="@+id/divisder3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="25dp"
            android:background="?android:attr/listDivider" />


    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/agreeBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/black_button_bg"
            android:text="I'm Agree"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>