<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NoActionBarAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorWhite</item>

    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="WhiteAppThem">
        <item name="android:background">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TransparentAppThem" parent="Theme.AppCompat">
       <item name="android:background">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomBackArrow">

        <item name="colorControlNormal">@color/colorBlack</item>

    </style>

    <style name="MyTablayoutTexAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">

        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>